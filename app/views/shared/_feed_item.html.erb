<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to full_name_for(feed_item.user), feed_item.user %>
  </span>
  <span class="content">
	  <%= link_to feed_item.name, feed_item %>
  	  <span class="content-date">(from <%= feed_item.start_at.to_date.strftime("%d %b") %> 
		  for <%= distance_of_time_in_words(feed_item.start_at, feed_item.end_at) %>)</span>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <% if current_user?(feed_item.user) %>
  	<%= link_to raw("<i class='icon-trash'></i>"), feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.name %>
  <% end %>
</li>
