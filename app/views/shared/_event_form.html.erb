<h3>Add Holiday:</h3><br>
<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :name, placeholder: "Title/Location" %>
	<br>
	<span class="title-left-start">start</span>
	<span class="select-right">
		<%= date_select :event, :start_at, :order => [:day, :month, :year], :default => 3.days.from_now %>
	</span>
	<br>
	<span class="title-left-end">end</span>
	<span class="select-right">
		<%= date_select :event, :end_at, :order => [:day, :month, :year], :default => 7.days.from_now %>
	</span>
	<br><br>
	<span>

	</span>
	
  </div>
  <%= f.submit "Create", class: "btn btn-large btn-primary" %>
<% end %>