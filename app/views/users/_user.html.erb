<li>
  <%= link_to gravatar_for(user, size: 52), 'https://en.gravatar.com/site/login', target: '_blank' %>
  <%= link_to full_name_for(user) , user %>
  <span class="capsemail"><%= user.email %></span>
  <% if current_user.admin? && !current_user?(user) %>
  <%= link_to raw("<i class='icon-trash'></i>"), user, method: :delete,
                                    data: { confirm: "Really Delete?" } %>
    <% end %>
</li>