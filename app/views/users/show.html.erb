<% provide(:title, @user.first_name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
			  <%= link_to gravatar_for(@user, size: 52), 'https://en.gravatar.com/site/login', target: '_blank' %>
			  <%= full_name_for(@user) %>
			</h1>
		</section>
		<h5>
			<%= @user.email%>
		</h5>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
		<% if @user.events.any? %>
			<h3>Events (<%= @user.events.count %>)</h3>
	  	  	<ol class="events">
	    		<%= render @events %>
	  		</ol>
	  	  	<%= will_paginate @events %>
		<% end %>
	</div>
</div>


